{
  "info": {
    "name": "Retail RAG MVP API",
    "description": "Postman collection for testing the Retail RAG MVP application endpoints",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "{{$randomUUID}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Check the health status of the application and vector index"
      },
      "response": []
    },
    {
      "name": "Root Endpoint",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        },
        "description": "Root endpoint that provides basic application information"
      },
      "response": []
    },
    {
      "name": "Data Ingestion",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"force_reindex\": false,\n  \"chunk_size\": 1000,\n  \"chunk_overlap\": 200\n}"
        },
        "url": {
          "raw": "{{base_url}}/ingest",
          "host": ["{{base_url}}"],
          "path": ["ingest"]
        },
        "description": "Trigger data ingestion and vector store creation. Run this first to prepare the system."
      },
      "response": []
    },
    {
      "name": "Data Ingestion - Force Reindex",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"force_reindex\": true,\n  \"chunk_size\": 1200,\n  \"chunk_overlap\": 250\n}"
        },
        "url": {
          "raw": "{{base_url}}/ingest",
          "host": ["{{base_url}}"],
          "path": ["ingest"]
        },
        "description": "Force reindexing with custom chunk parameters"
      },
      "response": []
    },
    {
      "name": "Chat - Product Recommendation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"query\": \"I need a comfortable office chair for long work hours\",\n  \"query_type\": \"recommendation\",\n  \"max_products\": 5\n}"
        },
        "url": {
          "raw": "{{base_url}}/chat",
          "host": ["{{base_url}}"],
          "path": ["chat"]
        },
        "description": "Ask for product recommendations"
      },
      "response": []
    },
    {
      "name": "Chat - Product Comparison",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"query\": \"Compare laptop options under $1000\",\n  \"query_type\": \"comparison\",\n  \"max_products\": 8,\n  \"price_range\": {\n    \"min\": 500,\n    \"max\": 1000\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/chat",
          "host": ["{{base_url}}"],
          "path": ["chat"]
        },
        "description": "Compare products with price filtering"
      },
      "response": []
    },
    {
      "name": "Chat - With Category Filter",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"query\": \"Show me wireless headphones with good battery life\",\n  \"query_type\": \"recommendation\",\n  \"max_products\": 6,\n  \"category_filter\": \"electronics\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/chat",
          "host": ["{{base_url}}"],
          "path": ["chat"]
        },
        "description": "Product query with category filtering"
      },
      "response": []
    },
    {
      "name": "Chat - Information Query",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"query\": \"What are the benefits of ergonomic keyboards?\",\n  \"query_type\": \"information\",\n  \"max_products\": 3\n}"
        },
        "url": {
          "raw": "{{base_url}}/chat",
          "host": ["{{base_url}}"],
          "path": ["chat"]
        },
        "description": "General information query about products"
      },
      "response": []
    },
    {
      "name": "Retrieve Documents",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/retrieve/gaming laptop",
          "host": ["{{base_url}}"],
          "path": ["retrieve", "gaming laptop"]
        },
        "description": "Retrieve relevant documents without generating a chat response"
      },
      "response": []
    },
    {
      "name": "Get Session Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/sessions/{{session_id}}",
          "host": ["{{base_url}}"],
          "path": ["sessions", "{{session_id}}"]
        },
        "description": "Get information about a specific user session"
      },
      "response": []
    },
    {
      "name": "Clear Session",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/sessions/{{session_id}}",
          "host": ["{{base_url}}"],
          "path": ["sessions", "{{session_id}}"]
        },
        "description": "Clear a user session and its conversation history"
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate session ID if not set",
          "if (!pm.collectionVariables.get('session_id')) {",
          "    pm.collectionVariables.set('session_id', pm.variables.replaceIn('{{$randomUUID}}'));",
          "}"
        ]
      }
    }
  ]
}